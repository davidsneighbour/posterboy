{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration Schema",
  "type": "object",
  "properties": {
    "userAgent": {
      "type": "string",
      "description": "User agent string to be used in requests",
      "default": "kolitsch.dev/1.1"
    },
    "sources": {
      "type": "array",
      "description": "List of source configurations",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "description": "Unique identifier for the source"
          },
          "type": {
            "type": "string",
            "enum": [
              "feed",
              "github"
            ],
            "description": "Type of the source"
          },
          "name": {
            "type": "string",
            "description": "Name of the source"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the feed"
          },
          "repo": {
            "type": "string",
            "description": "GitHub repository in the format 'owner/repo'"
          }
        },
        "required": [
          "slug",
          "type",
          "name"
        ],
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "feed"
              }
            },
            "required": [
              "url"
            ]
          },
          {
            "properties": {
              "type": {
                "const": "github"
              }
            },
            "required": [
              "repo"
            ]
          }
        ],
        "additionalProperties": false
      }
    },
    "targets": {
      "type": "array",
      "description": "List of target configurations",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "description": "Unique identifier for the target"
          },
          "type": {
            "type": "string",
            "enum": [
              "discord",
              "mastodon"
            ],
            "description": "Type of the target"
          },
          "name": {
            "type": "string",
            "description": "Name of the target"
          },
          "hook": {
            "type": "string",
            "description": "Webhook URL for Discord"
          },
          "username": {
            "type": "string",
            "description": "Username for Mastodon"
          }
        },
        "required": [
          "slug",
          "type",
          "name"
        ],
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "discord"
              }
            },
            "required": [
              "hook"
            ]
          },
          {
            "properties": {
              "type": {
                "const": "mastodon"
              }
            },
            "required": [
              "username"
            ]
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "userAgent",
    "sources",
    "targets"
  ],
  "additionalProperties": false
}
